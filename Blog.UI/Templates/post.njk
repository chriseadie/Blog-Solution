<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Frank+Ruhl+Libre:400,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css"></link>
    <title>CE - {{data.title}}</title>
</head>
<body>
    <div class="container">
        <nav>
            <div class="title-container">
                <h1>Chris Eadie</h1>
            </div>
            <hr class="solid-grey">
            <div class="category-panel">
                <div class="cat-container">
                    <a href="/">All</a>
                    <a href="/category/fashion">Fashion</a>
                    <a href="/category/lifestyle">Lifestyle</a>
                    <a href="/category/health">Health</a>
                    <a href="/category/food">Food</a>
                    <a href="/category/tech">Tech</a>
                </div>
            </div>
            <hr class="solid-grey">
        </nav>
        <div class="blog-banner-image" style="background-image:url({{data.bannerImage}})"></div>
        <div class="blog-text-container">
           <div class="blog-text-title">{{data.title}}</div>
           <div class="blog-text-content">{{data.body['en-us'] | safe}}</div>
        </div>
        <div class="comments-container">
            <div>Comments</div>
            <div class="">
                <textarea placeholder="Add a comment" id="commentBox"></textarea>
                <button id="submitComment">Add Comment</button>
            </div>
            <div class="display-comments" id="user-comment-box">
                {% for item in data.comments %}
                    <div class="comment-box">
                        {{item.comment}}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <script src="/scripts.js"></script>
</body>
</html>