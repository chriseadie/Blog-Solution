<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Frank+Ruhl+Libre:400,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css"></link>
    <title>Chris Eadie</title>
</head>
<body>
    <div class="container">
        <nav>
            <div class="title-container">
                <h1>Chris Eadie</h1>
            </div>
            <hr class="solid-grey">
            <div class="category-panel">
                <div class="cat-container">
                    <a href="/">All</a>
                    <a href="/category/fashion">Fashion</a>
                    <a href="/category/lifestyle">Lifestyle</a>
                    <a href="/category/health">Health</a>
                    <a href="/category/food">Food</a>
                    <a href="/category/tech">Tech</a>
                </div>
            </div>
            <hr class="solid-grey">
        </nav>
        <div class="blog-wrapper">
            {% for item in data %}
            <a href="/post/{{item.id}}"><div class="post-container">
             <div class="post-image" style="background-image:url({{item.bannerImage}})"></div>
                <div class="post-title">{{item.title}}</div>
                <div class="post-desc">{{item.description}}</div>
                <div class="post-author"><span class="post-label">Written by:</span> {{item.author}}</div>
            </div>
            </a>
            {% endfor %}
        </div>
    </div>
    <script src="/scripts.js"></script>
</body>
</html>